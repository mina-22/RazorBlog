@page
@model RazorPlog.Pages.CreatBlogModel
@{


}
@{
    Layout = "_DashBoard";
}
<div class="top">
    <i class="uil uil-bars sidebar-toggle"></i>

    <div class="search-box">
        <i class="uil uil-search"></i>
        <input type="text" placeholder="Search here...">
    </div>

    <img src="images/profile.jpg" alt="">
</div>

<div class="dash-content">
    <div class="dash-content">
        <div class="overview">
            <div class="title">
                <i class="uil uil-tachometer-fast-alt"></i>
                <span class="text">Adding Blog</span>
            </div>

            <div>
                <form  method="post" class="row" asp-page="">
                    <div class="mb-3">
                        <label asp-for="b.Name" class="form-label">Blog Name</label>
                        <input type="text" value=""
                               asp-for="b.Name"
                               value=""
                               class="form-control"
                               placeholder="" />
                  

                    </div>
                   
                    <input hidden asp-for="b.Id"/>
                    <div class="mb-3">
                        <label asp-for="b.Discription" class="form-label">Blog Description</label>
                        <textarea type="text"
                                  asp-for="b.Discription"
                                  value=""
                                  class="form-control"
                                  placeholder=""></textarea>
                    </div>
                  
                    <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="b.Enable" type="checkbox" value="true" />
                            <label class="form-check-label" asp-for="b.Enable"> Enable Product Visible </label>
                        </div>


                    </div>

                    <div class="mb-3 col-lg-6">
                        <label asp-for="b.TypeId" class="form-label">type</label>
                        <select class="form-select"
                                asp-for="b.TypeId">
                            @{
                                foreach (Models.Type v in Model.bt.types)
                                {
                                    <option value="@v.Id"> @v.Name</option>
                                }
                                
                           }
  
      
                        </select>
                    </div>

                    <div class="col-lg-12 d-flex justify-content-center">

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
